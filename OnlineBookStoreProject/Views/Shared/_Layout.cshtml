<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/Content/sites.css" rel="stylesheet" />
</head>
<body>
    <header>

        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <!--nav class="navbar navbar-inverse navbar-fixed-top" role="navigation"-->
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Online Book Store</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                            @await Component.InvokeAsync("CategoryMenu")
                            <li><a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Contact</a></li>
                            @await Component.InvokeAsync("ShoppingCartSummary")
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>
    </header>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                <img class="img-responsive" alt="Online Book Store" src="~/Images/onlinebookstorelogo.png" />
            </p>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Online Book Store - <a asp-area="" asp-controller="Book" asp-action="List">Book</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
