@model Book

<h2>@Model.Title</h2>

<div class="thumbnail">
    <img alt="@Model.Title" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Author</h3>
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Title</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.BookId">Add to cart</a>
            </p>
        </div>
    </div>
</div>